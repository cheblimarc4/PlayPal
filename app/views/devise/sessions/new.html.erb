<div class="signup-container">
  <h2>Log in</h2>

  <div class="signup-form">
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :email,
                    required: true,
                    autofocus: true,
                    input_html: { autocomplete: "email", style: "color: #1D1D1D; border-color: #878787;" },
                    label_html: { style: "color: #1D1D1D;" } %>
        <%= f.input :password,
                    required: true,
                    input_html: { autocomplete: "current-password", style: "color: #1D1D1D; border-color: #878787;" },
                    label_html: { style: "color: #1D1D1D;" } %>
        <%= f.input :remember_me, as: :boolean, input_html: { class: 'remember-checkbox' }, label_html: { class: 'remember-label' } if devise_mapping.rememberable? %>
      </div>

      <div class="form-actions2">
        <%= f.button :submit, "Log in", class: "bt-sign-up" %>
        <%= link_to "Forgot your password?", new_password_path(resource_name), class: "bt-forgot-pass" %>
        <%= link_to "Sign up", new_registration_path(resource_name), class: "bt-forgot-pass" %>
      </div>
    <% end %>
  </div>
</div>
