<% if @match.ready? %>
  <div class="container chat" style="height:500px;width:500px">
    <h4>Chat for match: <%= @match.id %></h4>

    <%= turbo_stream_from "match_#{@match.id}_messages" %>

    <div id="messages" class="messages">
      <% @messages.each do |message| %>
        <%= render "messages/message", message: message, user: message.user %> <!-- Pass user here -->
      <% end %>
    </div>
    <%= simple_form_for [@match, @message], html: { class: "d-flex", style:"height:100px", data: { controller: "reset-form", action: "turbo:submit-end->reset-form#reset" } } do |f| %>
      <%= f.input :content, label: false, placeholder: "Say Hello to your team", wrapper_html: { class: "flex-grow-1"} %>
      <%= f.submit "Send", class: "btn btn-primary mb-3" %>
    <% end %>
  </div>
<% end %>
