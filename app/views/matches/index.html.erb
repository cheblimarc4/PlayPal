<div class="matches-div">
  <div class="text-center matches-top-div border mx-auto p-5">
    <h1>Search your matches</h1>
    <div class="d-flex justify-content-center mt-5 rounded-5">
      <div class="dropdown">
            <select name="sport" id="sport">
              <option value="" disabled selected>Sport</option>
              <% @sports.each do |sport| %>
                <option value="<%= sport.name %>"><%= sport.name.capitalize %></option>
              <% end %>
            </select>
            <i class="fa-solid fa-caret-down"></i>
      </div>
      <div class="dropdown">
            <select name="level" id="level">
              <option value="" disabled selected>Level</option>
              <option value="level1">Beginner</option>
              <option value="level2">Intermediate</option>
              <option value="level3">Advanced</option>
            </select>
            <i class="fa-solid fa-caret-down"></i>
        </div>
        <div class="dropdown">
            <select name="date" type= "datetime-local" id="date">
              <option  value="" disabled selected>Date</option>
              <option value="today">Today</option>
              <option value="tomorrow">Tomorrow</option>
            </select>
            <i class="fa-solid fa-caret-down"></i>
          </div>
          <div class="dropdown">
            <select name="time" id="time">
              <option value="" disabled selected>Time</option>
              <option value="morning">Morning</option>
              <option value="afternoon">Afternoon</option>
              <option value="evening">Evening</option>
            </select>
            <i class="fa-solid fa-caret-down"></i>
          </div>
      <input type="submit" value="Search" class="mx-2 submit-button">
    </div>
  </div>

  <div class=" p-5 d-flex flex-wrap">
      <% @matches.each do |match|%>
      <%= link_to match_path(match), class:"mb-4 rounded-5 my-4 justify-content-center mx-auto bg-white shadow-gray hover-effect",style:"text-decoration: none; color: black; width: 30%" do %>
          <div class="py-3 date-grid">
            <p class="date" style=""><strong><%=match.match_date.strftime("%A, %d")%></strong></p>
            <h3 class="text-center highlight-text sport-name" style=""><%= match.sport.name.capitalize %></h3>
          </div>
          <div class="d-flex justify-content-between p-3 position-relative">
            <div>
              <p><strong>Organizer: </strong><%=match.user.first_name%></p>
              <p><strong>Level: </strong><%=match.level%></p>
              <p><strong>Available spots: </strong> X / <%=match.sport.number_of_players%></p>
            </div>
              <div class="icon-container">
                <i class="<%= match.sport_icon %>"></i>
              </div>
          </div>
        <% end %>
      <% end %>
  </div>
</div>
